@model studentsForm.Application.ViewModel.AddStudentVM

@{
    ViewData["Title"] = "Add Student";
    Layout = "_customLayout";
}

<h2 class="text-danger display-5 text-center">Add New Student</h2>

<form asp-action="AddStudent" method="post" id="addStudentForm">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        <span id="nameError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth" />
        <span id="dobError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
        <span id="emailError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
    </div>

    <div class="form-group">
        <label>Subjects (Select exactly 2)</label>
        <div id="Subjects" name="SubjectIds" class="form-check">
            @foreach (var subject in Model.AvailableSubjects)
            {
                <div>
                    <input type="checkbox" class="form-check-input" id="subject_@subject.Id" name="SubjectIds" value="@subject.Id">
                    <label class="form-check-label" for="subject_@subject.Id">@subject.Name</label>
                </div>
            }
        </div>
        <span id="subjectError" class="error-message"></span>
    </div>
    <button type="submit" class="btn btn-danger btn-lg submit-btn">Submit</button>
</form>

